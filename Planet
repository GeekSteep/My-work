import math

def calculate_surface_area(radius):
    """
    Calculate the surface area of a spherical planet.
    
    Parameters:
    radius (float): The radius of the planet.
    
    Returns:
    float: The surface area of the planet.
    """
    surface_area = 4 * math.pi * radius ** 2
    return surface_area

# Example usage:
radius_of_planet = 6371  # Earth's average radius in kilometers
surface_area = calculate_surface_area(radius_of_planet)
print(f"The surface area of the planet is {surface_area} square kilometers.")
